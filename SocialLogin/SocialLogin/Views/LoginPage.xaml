<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialLogin.Views.LoginPage"
             Title="Social Login">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Command="{Binding LoginFacebookCommand}" Text="LOGAR COM FACEBOOK" BackgroundColor="Blue" 
                    TextColor="White"
                    FontAttributes="Bold"></Button>
            <Button Command="{Binding LoginGoogleCommand}" Text="LOGAR COM GOOGLE" BackgroundColor="Red" 
                    TextColor="White"
                    FontAttributes="Bold"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>